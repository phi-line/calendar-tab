<section class="hero is-fullheight">
  <div class="hero-head">
    <h1 class="title is-1 is-unselectable room"><strong>{{currentRoom}}</strong></h1>
  </div>
  <div class="hero-foot">
    {{#if isOpen}}
      <h1 class="title open is-1">OPEN</h1>
    {{else}}
      <div class="title meeting is-1">
        {{#if currentEvent}}
          {{event-title event=currentEvent}}
        {{/if}}
      </div>
    {{/if}}
  </div>
</section>
