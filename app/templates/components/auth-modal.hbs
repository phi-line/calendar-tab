<div class="modal {{unless isAuthenticated "is-active"}}">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title has-text-centered">Authenticate with Google</p>
    </header>
    <section class="modal-card-body">
      <a class="button is-info" {{action 'authenticateSession'}}>Authenticate</a>
    </section>
  </div>
</div>
